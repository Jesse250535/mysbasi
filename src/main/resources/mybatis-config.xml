<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- 以上是 MyBatis 配置文件的必需表头，缺一不可 -->
<configuration>
    <!-- 数据库连接参数 -->
    <properties>
        <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/testdb?useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="123456"/> <!-- 替换为你的数据库密码 -->
    </properties>

    <!-- 实体类别名（简化映射文件中的类名） -->
    <typeAliases>
        <package name="com.model"/> <!-- 扫描 com.model 包下的实体类 -->
    </typeAliases>

    <!-- 数据库环境（使用 MyBatis 内置连接池） -->
    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/> <!-- 事务管理 -->
            <dataSource type="POOLED"> <!-- 连接池 -->
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <!-- 扫描 MyBatis 映射文件 -->
    <mappers>
        <mapper resource="mapper/UserMapper.xml"/>
    </mappers>
</configuration>